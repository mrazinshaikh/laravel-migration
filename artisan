<?php

require_once __DIR__ . '/bootstrap.php';

use Mrazinshaikh\LaravelMigration\CommandHandler;
use Mrazinshaikh\LaravelMigration\Commands\FreshCommand;
use Mrazinshaikh\LaravelMigration\Commands\InstallCommand;
use Mrazinshaikh\LaravelMigration\Commands\MigrateCommand;
use Mrazinshaikh\LaravelMigration\Commands\MakeMigrationCommand;

// Define the available commands
$commands = [
    'migrate' => MigrateCommand::class,
    'migrate:fresh' => FreshCommand::class,
    'migrate:install' => InstallCommand::class,
    'make:migration' => MakeMigrationCommand::class,
];

// Instantiate the command handler
$handler = new CommandHandler($commands);

/**
 * @var array $args
 * 
 * @link https://www.php.net/manual/en/reserved.variables.argv.php
 */
$args = $argv;
array_shift($args);
$command = $args[0] ?? null;
array_shift($args);

if (!$command || $command === 'list') {
    $handler->showPackageInfo();
    $handler->showAvailableCommands();
} else {
    $handler->executeCommand($command, $args);
}
